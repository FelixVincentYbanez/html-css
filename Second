  <script src="https://cdn.jsdelivr.net/npm/qrcode/build/qrcode.min.js"></script>
  <script>
    let selectedServices = [];
    let currentStep = 1;
    let queueCounter = 1;

    function goToStep(step) {
      document.querySelector(`#step${currentStep}`).classList.add("hidden");
      document.querySelector(`#step${step}`).classList.remove("hidden");
      currentStep = step;

      if (step === 3) showSummary();
    }

    function toggleService(element) {
      const service = element.textContent;
      const index = selectedServices.indexOf(service);

      if (index > -1) {
        selectedServices.splice(index, 1);
        element.classList.remove("selected");
      } else {
        if (selectedServices.length >= 2) {
          alert("You can only select up to 2 services.");
          return;
        }
        selectedServices.push(service);
        element.classList.add("selected");
      }
    }

    function showSummary() {
      document.getElementById("summaryName").textContent = document.getElementById("name").value;
      document.getElementById("summaryId").textContent = document.getElementById("studentId").value;
      document.getElementById("summaryCourse").textContent = document.getElementById("course").value + " - " + document.getElementById("year").value;

      const summaryDiv = document.getElementById("serviceSummary");
      summaryDiv.innerHTML = "";
      selectedServices.forEach(service => {
        const div = document.createElement("div");
        div.classList.add("summary-item");
        div.innerHTML = `${service} <span class="remove-btn" onclick="removeService('${service}')">ðŸ—‘ Remove</span>`;
        summaryDiv.appendChild(div);
      });
    }

    function removeService(service) {
      selectedServices = selectedServices.filter(s => s !== service);
      document.querySelectorAll(".service-btn").forEach(btn => {
        if (btn.textContent === service) btn.classList.remove("selected");
      });
      showSummary();
    }

    function generateQR(isPriority) {
      goToStep(5);

      const prefix = isPriority ? "P" : "R";
      const queueNum = prefix + "-" + queueCounter++;
      document.getElementById("queueNumber").textContent = queueNum;

      QRCode.toCanvas(document.getElementById("qrCanvas"), queueNum, { width: 200 }, function (error) {
        if (error) console.error(error);
      });
    }

    function resetForm() {
      location.reload();
    }
  </script>
</body>
